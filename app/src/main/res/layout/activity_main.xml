<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/textfield"
        android:paddingTop="40dp"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="40sp"></TextView>

    <TextView

        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_below="@id/textview1"
        android:background="@drawable/textfield"
        android:paddingTop="40dp"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="40sp"></TextView>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="C"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:id="@+id/buttonClear"
        android:backgroundTint="#9DB2BF"
        android:layout_below="@id/textview2">

    </Button>

    <Button
        android:id="@+id/buttonBackspace"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textview2"

        android:layout_marginLeft="13dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/buttonClear"
        android:backgroundTint="#9DB2BF"
        android:text="B"
        android:textColor="@color/black"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textview2"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/buttonBackspace"
        android:backgroundTint="#9DB2BF"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonDevide"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textview2"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/buttonPercent"
        android:backgroundTint="#FF7800"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="7"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button7"
        android:backgroundTint="#394867"
        android:layout_below="@id/buttonClear">
    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="8"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button8"
        android:backgroundTint="#394867"
        android:layout_below="@id/buttonBackspace"
        android:layout_toRightOf="@id/button7">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="9"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button9"
        android:backgroundTint="#394867"
        android:layout_below="@id/buttonPercent"
        android:layout_toRightOf="@id/button8">
    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="4"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button4"
    android:backgroundTint="#394867"
        android:layout_below="@id/button7">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="5"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button5"
        android:layout_below="@id/button8"
        android:backgroundTint="#394867"
        android:layout_toRightOf="@id/button4">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="6"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button6"
        android:backgroundTint="#394867"
        android:layout_below="@id/button9"
        android:layout_toRightOf="@id/button5">

    </Button>
    <Button

        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="1"
        android:backgroundTint="#394867"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button1"
        android:layout_below="@id/button4">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="2"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button2"
        android:layout_below="@id/button5"
        android:backgroundTint="#394867"
        android:layout_toRightOf="@id/button1">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="3"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/button3"
        android:backgroundTint="#394867"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button2">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="x"
        android:textSize="25sp"
        android:backgroundTint="#FF7800"
        android:textColor="@color/white"
        android:id="@+id/buttonKali"
        android:layout_below="@id/buttonDevide"
        android:layout_toRightOf="@id/button9">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="+"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/buttonTambah"
        android:layout_below="@id/buttonKurang"
        android:layout_toRightOf="@id/button3"
        android:backgroundTint="#FF7800">

    </Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="-"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/buttonKurang"
        android:layout_below="@id/buttonKali"
        android:layout_toRightOf="@id/button6"
        android:backgroundTint="#FF7800">

    </Button>

    <Button
        android:id="@+id/button0"
        android:layout_width="163dp"
        android:layout_height="75dp"
        android:layout_below="@id/button1"
        android:layout_marginLeft="13dp"
        android:backgroundTint="#394867"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"></Button>
    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:text="."
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/buttonKoma"
        android:layout_below="@id/button3"
        android:layout_toRightOf="@id/button0"
        android:backgroundTint="#394867">
    </Button>

    <Button
        android:id="@+id/buttonHasil"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_below="@id/buttonTambah"

        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/buttonKoma"
        android:backgroundTint="#FF7800"
        android:text="="
        android:textColor="@color/white"
        android:textSize="25sp"></Button>

</RelativeLayout>